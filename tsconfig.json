{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "suppressImplicitAnyIndexErrors": true
  },
  "files": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}